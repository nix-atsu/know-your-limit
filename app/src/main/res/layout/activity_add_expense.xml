<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin"
        >

        <Switch
            android:id="@+id/show_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textOff="No"
            android:textOn="Yes"
            android:text="Show details"
            >

        </Switch>
        <EditText
            android:id="@+id/add_total_expense_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="number"
            android:digits="0123456789."
            android:maxLength="10"
            android:hint="Total sum"
            />
        <CheckBox
            android:id="@+id/user1_expense"
            android:text="Users 1's Expense"
            />
        <CheckBox
            android:id="@+id/user2_expense"
            android:text="Users 2's Expense"
            />
        <Button android:id="@+id/add_total_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Add total expense"
            />
    </TableLayout>

</ScrollView>
